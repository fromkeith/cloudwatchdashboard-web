doctype html
html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="/css/index.css", rel="stylesheet")
        link(href="//cdnjs.cloudflare.com/ajax/libs/rickshaw/1.4.6/rickshaw.min.css", rel="stylesheet")
        script(src="//cdnjs.cloudflare.com/ajax/libs/d3/3.4.11/d3.min.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/rickshaw/1.4.6/rickshaw.min.js")
        script(src="/js/require.js", data-main="/js/index")
    body
        div#home(data-role="page")
            div(data-role="header")
                a#menutoggle(href="#menu", data-icon="bars", data-iconpos="notext")
                    | Menu
                h4 Welcome
            div(data-role="content")
                button#addGraph.ui-btn.ui-btn-inline
                    | Add Graph
                div#graphs
            div#menu(data-role="panel", data-display="overlay")
                .ui-bar.ui-bar-a.ui-corner-all
                    | Graphs
                #savedGraphs
                    input#savedGraphsFilter(data-type="search")
                    div#graphlist(data-role="controlgroup", data-filter="true", data-input="#savedGraphsFilter")
                //-div#metricList(data-role="tabs")
                    #namespacesTab
                        input(data-type="search", id="namespacesFilter")
                        div#namespaces(data-role="controlgroup", data-filter="true", data-input="#namespacesFilter")
                    #metricsTab(style="display:none")
                        button#backToNamespaces.ui-btn.ui-mini Back
                        input(data-type="search", id="metricsFilter")
                        div#metrics(data-role="controlgroup", data-filter="true", data-input="#metricsFilter")
