doctype html
html
    head
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(href="/css/index.css", rel="stylesheet")
        link(href="//cdnjs.cloudflare.com/ajax/libs/rickshaw/1.4.6/rickshaw.min.css", rel="stylesheet")
        script(src="//cdnjs.cloudflare.com/ajax/libs/d3/3.4.11/d3.min.js")
        script(src="//cdnjs.cloudflare.com/ajax/libs/rickshaw/1.4.6/rickshaw.min.js")
        script(src="/js/require.js", data-main="/js/index")
    body
        div#home(data-role="page")
            div(data-role="header")
                h4 Welcome!
            div(data-role="content")
                a.ui-btn(href="#metrics") Metrics
                a.ui-btn(href="#logs") Logs
                a.ui-btn(href="#dashboards") Dashboards
        div#metrics(data-role="page")
            div(data-role="header")
                a#menutoggle(href="#menu", data-icon="bars", data-iconpos="notext")
                    | Menu
                h4 Metrics!
            div(data-role="content")
                button#addGraph.ui-btn.ui-btn-inline
                    | Add Graph
                div#graphs
            div#menu(data-role="panel", data-display="overlay")
                .ui-bar.ui-bar-a.ui-corner-all
                    | Graphs
                #savedGraphs
                    input#savedGraphsFilter(data-type="search")
                    div#graphlist(data-role="controlgroup", data-filter="true", data-input="#savedGraphsFilter")
                //-div#metricList(data-role="tabs")
                    #namespacesTab
                        input(data-type="search", id="namespacesFilter")
                        div#namespaces(data-role="controlgroup", data-filter="true", data-input="#namespacesFilter")
                    #metricsTab(style="display:none")
                        button#backToNamespaces.ui-btn.ui-mini Back
                        input(data-type="search", id="metricsFilter")
                        div#metrics(data-role="controlgroup", data-filter="true", data-input="#metricsFilter")
        div#logs(data-role="page")
            iv(data-role="header")
                h4 Logs!
            div(data-role="content")
                h4 Log Groups
                div#logGroups(data-role="controlgroup", data-type="horizontal")
                h5 Log Streams
                fieldset#logStreams(data-role="controlgroup", data-type="horizontal")
                form.ui-filterable
                    input#searchLog(data-type="search")
                table#logcontent.ui-responsive(data-role="table", data-filter="true", data-input="#searchLog")
                    thead
                        tr
                            th Stream
                            th Time
                            th Log
                    tbody
        div#dashboards(data-role="page")
            div(data-role="header")
                h4 Dashboards
            div(data-role="content")
                input#newDashboardName(type="text", placeholder-text="New Dashboard Name")
                button#newDashboard.ui-btn.ui-btn-inline New Dashboard
                input#dashboardFilter(data-type="search")
                #dashboardList(data-role="controlgroup", data-filter="true", data-input="#dashboardFilter")
        div#dashboard(data-role="page")
            div(data-role="header")
                h4 Dashboard
            div(data-role="content")
                button#addGraph.ui-btn.ui-btn-inline
                    | Add Graph
                button#saveDashboard.ui-btn.ui-btn-inline
                    | Save
                input#dashboardName(type="text")
                div#graphs

